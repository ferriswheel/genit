$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'
$GENIT_PATH = File.expand_path(File.dirname(__FILE__)) + '/..'

require 'genit'
include Genit

def usage
  puts %q{usage: genit command

where command is:
  create project-name
  compile | cc}
end

case ARGV[0]
  when "create"
    case ARGV[1]
      when /\w/
        project = ProjectCreator.new ARGV[1]
        project.create
      else
        usage
    end
  when "compile", "cc"
    compiler = Compiler.new Dir.getwd
    compiler.compile
  else
    usage
end
